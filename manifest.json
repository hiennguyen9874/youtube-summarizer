{
  "manifest_version": 3,
  "name": "YouTube AI Summarizer",
  "version": "1.0.0",
  "description": "Summarize YouTube videos using AI (OpenAI/Gemini)",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.openai.com/*",
    "https://*.googleapis.com/*",
    "http://127.0.0.1/*",
    "http://localhost/*",
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "popup/popup.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": [
        "vendor/marked.min.js",
        "utils/storage.js",
        "utils/i18n.js",
        "utils/api.js",
        "content/content.js"
      ],
      "css": ["content/sidebar.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["locales/messages.json"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
